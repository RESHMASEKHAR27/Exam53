@model Exam53.Models.User;
<form asp-action="Index" asp-controller="Home" method="post">
    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Email" class="control-label"></label>
        <input asp-for="Email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="DateOfBirth" class="control-label"></label>
        <input asp-for="DateOfBirth" class="form-control" id="dob" />
        <span asp-validation-for="DateOfBirth" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Hobbies" class="control-label"></label>
        <select asp-for="Hobbies" class="mt-3" multiple>
            <option value="reading">reading</option>
            <option value="writing">writing</option>
            <option value="chess">chess</option>

        </select>
        <span asp-validation-for="Hobbies" class="text-danger"></span>
    </div>
    <input type="submit" value="I am below 18" class="btn btn-outline-primary mt-4" onclick="kids()" id="below18" />
    <input type="submit" value="I am above 18" class="btn btn-outline-primary mt-4" onclick="adult()" id="above18" />
</form>
@section Scripts
    {
    @await Html.PartialAsync("/Views/Shared/_ValidationScriptsPartial.cshtml")
    <script>
        $(document).ready(function () {
            $("#below18").click(function () {
                var dob = new Date($("#dob").val());
                var today = new Date();
                var age = today.getFullYear() - dob.getFullYear();
                if (age < 18) {
                    $("form").attr("action", "@Url.Action("Kids")");
                    $("form").submit();

                } else {
                    alert("You are above 18");

                }
            });
            $("#above18").click(function () {
                var dob = new Date($("#dob").val());
                var today = new Date();
                var age = today.getFullYear() - dob.getFullYear();
                if (age > 18) {
                    $("form").attr("action", "@Url.Action("Adult")");
                    $("form").submit();

                } else {
                    alert("You are below 18");

                }
            });

        });
    </script>

}
